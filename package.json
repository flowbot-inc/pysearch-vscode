{
	"name": "PySearch",
	"description": "Smart Documentation Search for Python",
	"author": "PySearch Team",
	"displayName": "PySearch",
	"license": "MIT",
	"version": "0.0.1",
    "repository": "https://github.com/l-zone-dev/pysearch-vscode.git",
	"publisher": "Flowbot",
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:python"
	],
	"main": "/out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "PySearch",
			"properties": {
				"logToFile": {
					"type": "boolean",
					"default": true,
					"description": "When set to true, stderr and stdout is logged to a file at workspace root level. Requires reloading extension after change."
				},
				"pythonPath": {
					"scope": "resource",
					"type": "string",
					"default": "python3",
					"description": "Absolute path of your Python binary. This is used to launch the Python language server. Make sure to install `pyls` for this version of Python. Changes will take effect after a restart of the language server. Use `$PIPENV_PATH/bin/python` if you want to use the pipenv path of your project"
				},
				"Fuzz": {
					"scope": "window",
					"type": "number",
					"enum": [
						0,
						1,
						2,
						3,
						4,
						5
					],
					"default": "3",
          "description": "Search fuzziness with respect to current context. Can be changed in live query using the --fuzz (-f) flag."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"axios": "0.19.2",
		"vscode-languageclient": "6.1.0"
	}
}
